@model BookApp.Models.Condition

@if (Session["Email"] == null)
{
    Response.Redirect("~/Home/Login");
}
else
{
    {
        ViewBag.Title = "Create";
        Layout = "~/Views/Shared/_Layout.cshtml";
    }

    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <link href="~/Content/Book/Style.css" rel="stylesheet" />



    using (Html.BeginForm("Create", "Condition", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

<div class="container register-form">
    <div class="form">
        <div class="note">
            <p>Add Book Condition</p>
        </div>

        <div class="form-content">
            <div class="row">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(model => model.Condition1, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-12">
                        @Html.EditorFor(model => model.Condition1, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Condition1, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <hr />
            <br />

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <button type="submit" class="btnSubmit">Submit</button>
                </div>
            </div>
            <div>
                @Html.ActionLink("Back to List", "Index")
            </div>

        </div>
        </div>
    </div>
    }
}






