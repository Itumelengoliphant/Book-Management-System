
    @{
        ViewBag.Title = "ForgotPassword";
    }

<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
                <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
                                <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
                                                <link href="~/Content/Book/Style.css" rel="stylesheet" /> 
                                                <div class="container register-form">
                                                    <div class="form">
                                                        <div class="note">
                                                            <p>Forgot Password</p>
                                                        </div>
                                                        <div class="form-content">
                                                            <div class="form-horizontal">
                                                                <p>
                                                                    Forgot your password? Don't fret - let's help your recover your password
                                                                    by simply following the simple instructions below.
                                                                </p>
                                                                <hr />
                                                                <div class="text-success">
                                                                    @ViewBag.Message
                                                                </div>

                                                                <div class="form-group">
                                                                    <label class="control-label col-md-2">Email Address</label>
                                                                    @Html.TextBox("email", "", new { @class = "form-control" })
                                                                </div>

                                                                <div class="form-group">
                                                                    <div class="col-md-offset-2 col-md-2">
                                                                    </div>
                                                                </div>
                                                                <button type="submit" class="btnSubmit">Submit</button>
                                                            </div>
                                                        </div>

                                                    </div>
                                                </div>
                                        


