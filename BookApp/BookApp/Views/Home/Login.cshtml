@model BookApp.Models.UserLogin

@{ Layout = null; }

<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Login</title>

    <!-- Custom fonts for this template-->
    <link href="~/Content/AdminTemp/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
          rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="~/Content/AdminTemp/css/sb-admin-2.min.css" rel="stylesheet">

</head>

<body class="bg-gradient-primary">

    <div class="container">

        <!-- Outer Row -->
        <div class="row justify-content-center">

            <div class="col-xl-5 col-lg-12 col-md-5">

                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body">

                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4">Welcome Back!</h1>
                            </div>
                            @if (ViewBag.Message != "")
                            {
                                <div class="text-danger">*@ViewBag.Message</div>
                            }

                            @using (Html.BeginForm())
                            {
                                @Html.AntiForgeryToken()
                                <div class="form-group">
                                    @Html.EditorFor(model => model.EmailID, new { htmlAttributes = new { @class = "form-control form-control-user", placeholder = @Html.DisplayNameFor(m => m.EmailID) } })

                                </div>
                                <div class="form-group">
                                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control form-control-user", placeholder = @Html.DisplayNameFor(m => m.Password) } })
                                </div>
                                <div class="form-group">
                                    <h6>Remember me?</h6>
                                    <div class="col-md-10">
                                        <div class="checkbox">

                                            @Html.EditorFor(model => model.RememberMe)
                                            @Html.ValidationMessageFor(model => model.RememberMe, "", new { @class = "text-danger" })

                                        </div>
                                    </div>
                                </div>
                                <input type="submit" value="Sign In" class="btn btn-primary btn-user btn-block" />

                                <hr>
                            }


                            <hr>
                            <div class="text-center">
                                <a class="small" data-toggle="modal" data-target=".bootstrapmodal" style="cursor:pointer">Forgot Password?</a>
                                <div class="modal fade bootstrapmodal">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <div class="modal-title"><b>Forgot Password?</b></div>
                                            </div>

                                            <div class="modal-body">
                                                <form class="user">
                                                    <div class="form-group">
                                                        <input type="email" class="form-control form-control-user"
                                                               id="exampleInputEmail" aria-describedby="emailHelp"
                                                               placeholder="Enter Email Address...">
                                                    </div>

                                                </form>
                                            </div>

                                            <div class="modal-footer">
                                                <button class="btn btn-primary">Reset Password</button>
                                                <button class="btn btn-default" data-dismiss="modal">Cancel</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="text-center">
                                <a class="small" href="~/Home/Registration">Create an Account!</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>



</body>

</html>

