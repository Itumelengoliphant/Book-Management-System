@model IEnumerable<BookApp.Models.Rental>


<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" />
<link rel="stylesheet" href="https://cdn.datatables.net/1.10.19/css/dataTables.bootstrap4.min.css" />
<link href="~/Content/AdminTemp/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
<link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
      rel="stylesheet">

<link href="~/Content/AdminTemp/vendor/datatables/dataTables.bootstrap4.min.css" rel="stylesheet">
<link href="~/Content/AdminTemp/css/sb-admin-2.min.css" rel="stylesheet">

@if (Session["Email"] == null)
{
    Response.Redirect("~/Home/Login");
}
else
{


    <!DOCTYPE html>

    <html>
    <head>
        <meta name="viewport" content="width=device-width" />
    </head>
    <body>
        <p style="margin-left:20px">
            @Html.ActionLink("Rent Book", "Create", "Rental", new { @class = "btn btn-primary fa fa-plus-circle" })  
        </p>
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Books Rented</h6>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <tr>
                            <th>
                                Guardian Cell
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.GuardianAddress)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.HasPenalty)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.DateOfRent)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.DateOfReturn)
                            </th>
                            <th>
                                Book Title
                            </th>
                            <th>
                                Rented To?
                            </th>
                            <th>Action</th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>

                                <td>
                                    @Html.DisplayFor(modelItem => item.GuardianCell)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.GuardianAddress)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.HasPenalty)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DateOfRent)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DateOfReturn)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Book.Title)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.User.FirstName) @Session["LastName"]
                                </td>
                                <td class="btn-group">
                                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new {@class = "btn btn-primary fa fa-pencil-square-o" })
                                    @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-success fa fa-info-circle" })
                                    @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger fa fa-trash-o" })
                                </td>
                            </tr>
                        }

                    </table>
                    </div>
                </div>
            </div>
    </body>
</html>
}


