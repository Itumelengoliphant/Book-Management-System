                        @Html.DisplayFor(modelItem => item.Password)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsEmailVerified)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ActivationCode)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ResetPasswordCode )
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Gender.Gender1)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Institution.Name)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.UserId }) |
                        @Html.ActionLink("Details", "Details", new { id = item.UserId }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.UserId })
                    </td>
                </tr>
            }

        </table>
    </body>
</html>
}


