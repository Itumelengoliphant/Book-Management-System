<!DOCTYPE html>
<html>
<head>

    @*@Styles.Render("~/Content/cs")
        @Scripts.Render("~/bundles/modernizr")*@

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title></title>



    <!-- Custom fonts for this template-->
    <link href="~/Content/AdminTemp/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
          rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="~/Content/AdminTemp/vendor/datatables/dataTables.bootstrap4.min.css" rel="stylesheet">

    <link href="~/Content/AdminTemp/css/sb-admin-2.min.css" rel="stylesheet">
    <link href="~/Content/AdminTemp/vendor/datatables/dataTables.bootstrap4.min.css" rel="stylesheet">
    <link href="~/Content/alertifyjs/alertify.min.css" rel="stylesheet" />
    <link href="~/Content/alertifyjs/themes/default.min.css" rel="stylesheet" />
</head>
<body id="page-top">


    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Sidebar -->
        <ul class="navbar-nav bg-gradient-primary sidebar sidebar-dark accordion" id="accordionSidebar">

            <!-- Sidebar - Brand -->
            <a class="sidebar-brand d-flex align-items-center justify-content-center" href="#">
                <div class="sidebar-brand-icon rotate-n-15">
                    <i class="fas fa-book"></i>
                </div>
                <div class="sidebar-brand-text mx-3">Admin</div>
            </a>

            <!-- Divider -->
            <hr class="sidebar-divider my-0">

            <!-- Nav Item - Dashboard -->
            <li class="nav-item active">
                <a class="nav-link" href="#">
                    <i class="fas fa-fw fa-tachometer-alt"></i>
                    <span>Dashboard</span>
                </a>
            </li>

            <!-- Divider -->
            <hr class="sidebar-divider">

            <!-- Heading -->
            <div class="sidebar-heading">
                Book Menu
            </div>

            <!-- Nav Item - Pages Collapse Menu -->
            <li class="nav-item">
                <a class="nav-link collapsed" href="#" data-toggle="collapse" data-target="#collapseTwo"
                   aria-expanded="true" aria-controls="collapseTwo">
                    <i class="fas fa-fw fa-cog"></i>
                    <span>Book Management</span>
                </a>
                <div id="collapseTwo" class="collapse" aria-labelledby="headingTwo" data-parent="#accordionSidebar">
                    <div class="bg-white py-2 collapse-inner rounded">
                        <h6 class="collapse-header">Book Configurations:</h6>
                        <a class="collapse-item" href="~/Condition/Index">Book Condition</a>
                        <a class="collapse-item" href="~/Category/Create">Book Category</a>
                        <a class="collapse-item" href="~/Book/Create">Add Book</a>
                        <a class="collapse-item" href="~/Book/Index">View Book(s)</a>
                        <a class="collapse-item" href="#">Book Order</a>
                        <a class="collapse-item" href="~/Rental/Create">Book Rental</a>
                        <a class="collapse-item" href="~/Seller/Create">Book Purchase</a>
                    </div>
                </div>
            </li>

            <!-- Nav Item - Utilities Collapse Menu -->
            <li class="nav-item">
                <a class="nav-link collapsed" href="#" data-toggle="collapse" data-target="#collapseUtilities"
                   aria-expanded="true" aria-controls="collapseUtilities">
                    <i class="fas fa-fw fa-wrench"></i>
                    <span>User Management</span>
                </a>
                <div id="collapseUtilities" class="collapse" aria-labelledby="headingUtilities"
                     data-parent="#accordionSidebar">
                    <div class="bg-white py-2 collapse-inner rounded">
                        <h6 class="collapse-header">User Configs</h6>
                        <a class="collapse-item" href="~/Gender/Create">Add Gender</a>
                        <a class="collapse-item" href="~/Home/Registration">Add User</a>
                        <a class="collapse-item" href="~/Roles/Create">Add Role</a>
                        <a class="collapse-item" href="~/Home/Index">View User(s)</a>
                        <a class="collapse-item" href="~/Roles/Index">View Role(s)</a>
                        <a class="collapse-item" href="~/Gender/Index">View Gender(s)</a>
                        <a class="collapse-item" href="~/Home/ForgotPassword">Forgot Password</a>

                    </div>
                </div>
            </li>

            <!-- Divider -->
            <hr class="sidebar-divider">

            <!-- Heading -->
            <div class="sidebar-heading">
                Institution
            </div>

            <!-- Nav Item - Pages Collapse Menu -->
            <li class="nav-item">
                <a class="nav-link collapsed" href="#" data-toggle="collapse" data-target="#collapsePages"
                   aria-expanded="true" aria-controls="collapsePages">
                    <i class="fas fa-fw fa-folder"></i>
                    <span>Institutution</span>
                </a>
                <div id="collapsePages" class="collapse" aria-labelledby="headingPages" data-parent="#accordionSidebar">
                    <div class="bg-white py-2 collapse-inner rounded">
                        <h6 class="collapse-header">Institution Management:</h6>
                        <a class="collapse-item" href="~/InstitutionType/Create">Add Type</a>
                        <a class="collapse-item" href="~/Institution/Create">Add Institution</a>
                        <a class="collapse-item" href="~/Campus/Create">Add Campus</a>
                        <a class="collapse-item" href="~/Department/Create">Add Department</a>
                        <div class="collapse-divider"></div>
                        <h6 class="collapse-header">View Section:</h6>
                        <a class="collapse-item" href="~/InstitutionType/Index">View Types</a>
                        <a class="collapse-item" href="~/Institution/Index">View Institutions</a>
                        <a class="collapse-item" href="~/Campus/Index">View Campuses</a>
                        <a class="collapse-item" href="~/Department/Index">View Departments</a>
                    </div>
                </div>
            </li>


            <hr class="sidebar-divider">

            <!-- Heading -->
            <div class="sidebar-heading">
                Reports
            </div>

            <!-- Nav Item - Pages Collapse Menu -->
            <li class="nav-item">
                <a class="nav-link collapsed" href="#" data-toggle="collapse" data-target="#collapseThree"
                   aria-expanded="true" aria-controls="collapseThree">
                    <i class="fas fa-fw fa-cog"></i>
                    <span>Report Directory</span>
                </a>
                <div id="collapseThree" class="collapse" aria-labelledby="headingTwo" data-parent="#accordionSidebar">
                    <div class="bg-white py-2 collapse-inner rounded">
                        <h6 class="collapse-header">All Reports</h6>
                        <a class="collapse-item" href="#">Purchasing</a>
                        <a class="collapse-item" href="#">Rentals</a>
                        <a class="collapse-item" href="#">Most Purchased</a>
                        <a class="collapse-item" href="#">Least Purchased</a>
                        <a class="collapse-item" href="#">Most Rented</a>
                        <a class="collapse-item" href="#">Least Rented</a>
                        <a class="collapse-item" href="#">Total Books</a>
                    </div>
                </div>
            </li>




            <!-- Divider -->
            <hr class="sidebar-divider d-none d-md-block">

            <!-- Sidebar Toggler (Sidebar) -->
            <div class="text-center d-none d-md-inline">
                <button class="rounded-circle border-0" id="sidebarToggle"></button>
            </div>

            <!-- Sidebar Message -->
            <div class="sidebar-card">
                <img class="sidebar-card-illustration mb-2" src="img/undraw_rocket.svg" alt="">
                <p class="text-center mb-2"><strong>Book App</strong> the ultimate book management system!</p>
                <a class="btn btn-success btn-sm" href="#">Buy System!</a>
            </div>

        </ul>
        <!-- End of Sidebar -->
        <!-- Content Wrapper -->

        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <!-- Topbar -->
                <nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow">

                    <!-- Sidebar Toggle (Topbar) -->
                    <button id="sidebarToggleTop" class="btn btn-link d-md-none rounded-circle mr-3">
                        <i class="fa fa-bars"></i>
                    </button>

                    <!-- Topbar Navbar -->
                    <ul class="navbar-nav ml-auto">
                        @Html.Partial("_ShoppingCart")
                        <div class="topbar-divider d-none d-sm-block"></div>


                        <!-- Nav Item - User Information -->
                        <li class="nav-item dropdown no-arrow">
                            <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button"
                               data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <span class="mr-2 d-none d-lg-inline text-gray-600 small">@Session["FirstName"] @Session["LastName"]</span>
                                <img class="img-profile rounded-circle"
                                     src="~/Image/img/undraw_profile.svg">
                            </a>
                            <!-- Dropdown - User Information -->
                            <div class="dropdown-menu dropdown-menu-right shadow animated--grow-in"
                                 aria-labelledby="userDropdown">
                                <a class="dropdown-item" href="#">
                                    <i class="fas fa-user fa-sm fa-fw mr-2 text-gray-400"></i>
                                    Profile
                                </a>
                                <a class="dropdown-item" href="#">
                                    <i class="fas fa-cogs fa-sm fa-fw mr-2 text-gray-400"></i>
                                    Settings
                                </a>

                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" href="#" data-toggle="modal" data-target="#logoutModal">
                                    <i class="fas fa-sign-out-alt fa-sm fa-fw mr-2 text-gray-400"></i>
                                    Logout
                                </a>
                            </div>
                        </li>
                    </ul>

                </nav>

                @RenderBody()
                <!-- End of Topbar -->
                <!-- Begin Page Content -->
                <div class="container-fluid">

                    <!-- Page Heading -->
                    <!-- Content Row -->
                    <!-- End of Main Content -->
                    <footer class="sticky-footer bg-white">
                        <div class="container my-auto">
                            <div class="copyright text-center my-auto">
                                <span>Copyright &copy; Book App 2021</span>
                            </div>
                        </div>
                        </
                        <!-- Footer -->
                        <!-- End of Footer -->

                </div>
                <!-- End of Content Wrapper -->

            </div>
            <!-- End of Page Wrapper -->
            <!-- Scroll to Top Button-->
            <a class="scroll-to-top rounded" href="#page-top">
                <i class="fas fa-angle-up"></i>
            </a>

            <!-- Logout Modal-->
            <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
                 aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">Ready to Leave?</h5>
                            <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">×</span>
                            </button>
                        </div>
                        <div class="modal-body">Select "Logout" below if you are ready to end your current session.</div>
                        <div class="modal-footer">
                            <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
                            <a class="btn btn-primary" href="~/Home/Login">Logout</a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Bootstrap core JavaScript-->
            <script src="~/Content/AdminTemp/vendor/jquery/jquery.min.js"></script>
            <script src="~/Content/AdminTemp/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
            <!-- Core plugin JavaScript-->
            <script src="~/Content/AdminTemp/vendor/jquery-easing/jquery.easing.min.js"></script>
            <!-- Custom scripts for all pages-->
            <script src="~/Content/AdminTemp/js/sb-admin-2.min.js"></script>
            <!-- Page level plugins -->
            <script src="~/Content/AdminTemp/vendor/chart.js/Chart.min.js"></script>

            <!-- Page level custom scripts -->
            <script src="~/Content/AdminTemp/js/demo/chart-area-demo.js"></script>
            <script src="~/Content/AdminTemp/js/demo/chart-pie-demo.js"></script>


            <script src="~/Content/AdminTemp/vendor/datatables/jquery.dataTables.min.js"></script>
            <script src="~/Content/AdminTemp/vendor/datatables/dataTables.bootstrap4.min.js"></script>

            <script src="~/Content/AdminTemp/js/demo/datatables-demo.js"></script>



            @Scripts.Render("~/bundles/jquery")
            @Scripts.Render("~/bundles/bootstrap")
            <script src="~/Scripts/alertify.min.js"></script>
            @RenderSection("scripts",required:false)
</body>
</html>
